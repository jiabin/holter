; EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
indent_style = space
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true

[*.php*]
indent_size = 4

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.less]
indent_size = 2

[*.yml]
indent_size = 4

[*.rb]
indent_size = 2

[*.test]
indent_size = 4

[*.rst]
indent_size = 4

[*.json]
indent_size = 2

[composer.json]
indent_size = 4
